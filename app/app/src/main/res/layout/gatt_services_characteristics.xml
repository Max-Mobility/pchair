<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center|top"
    android:background="@color/background_floating_material_light">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@id/device_address"
        android:text="@string/label_device_address"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/device_address"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/connection_state"
        android:text="@string/label_state"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/connection_state"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/disconnected"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/data_value"
        android:text="@string/label_data"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/data_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:text="@string/no_data"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connection_state" />

    <ExpandableListView
        android:id="@+id/gatt_services_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="411dp"
        android:layout_marginBottom="731dp"
        android:textSize="36sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/run"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="440dp"
        android:background="#ffffff"
        android:clickable="true"
        android:contentDescription="@string/plus"
        android:focusable="true"
        android:src="@drawable/run"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/sleep"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="276dp"
        android:layout_marginBottom="444dp"
        android:background="#2196F3"
        android:clickable="true"
        android:contentDescription="@string/minus"
        android:focusable="true"
        android:src="@drawable/sleep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_0"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_column="1"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="348dp"
        android:clickable="true"
        android:contentDescription="@string/image_0"
        android:focusable="true"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_column="3"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="264dp"
        android:clickable="true"
        android:contentDescription="@string/image_1"
        android:focusable="true"
        android:src="@drawable/leg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_column="1"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="176dp"
        android:clickable="true"
        android:contentDescription="@string/image_2"
        android:focusable="true"
        android:src="@drawable/tilt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_column="1"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="88dp"
        android:clickable="true"
        android:contentDescription="@string/image_3"
        android:focusable="true"
        android:src="@drawable/elev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_column="3"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:contentDescription="@string/image_4"
        android:focusable="true"
        android:src="@drawable/stand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_zoom"
        android:layout_width="214dp"
        android:layout_height="224dp"
        android:layout_column="1"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="108dp"
        android:contentDescription="@string/sleep"
        android:src="@drawable/sleep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/plusButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="208dp"
        android:layout_marginBottom="368dp"
        android:background="#ffffff"
        android:clickable="true"
        android:contentDescription="@string/plus"
        android:focusable="true"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/minusButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_marginStart="208dp"
        android:layout_marginBottom="24dp"
        android:background="#ffffff"
        android:clickable="true"
        android:contentDescription="@string/minus"
        android:focusable="true"
        android:src="@drawable/minus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/speed_mid"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_column="3"
        android:layout_marginStart="168dp"
        android:layout_marginBottom="228dp"
        android:clickable="true"
        android:contentDescription="@string/speed_mid"
        android:focusable="true"
        android:src="@drawable/medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/speed_low"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_column="1"
        android:layout_marginStart="168dp"
        android:layout_marginBottom="348dp"
        android:clickable="true"
        android:contentDescription="@string/speed_low"
        android:focusable="true"
        android:src="@drawable/low"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/speed_high"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_column="1"
        android:layout_marginStart="168dp"
        android:layout_marginBottom="112dp"
        android:clickable="true"
        android:contentDescription="@string/speed_high"
        android:focusable="true"
        android:src="@drawable/high"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


